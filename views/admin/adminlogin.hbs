<section class="pt-5" style="width: 100vw; height: 100vh; background: linear-gradient(to top right,  #bd0b4f 0%, #ffAA66 100%);"> 
    <div class="container pt-5">
        <h1 class="text-white">Welcome SHOP'N ADMIN</h1>
        <div class="row mt-5 d-flex justify-content-center">
            <div class="col-md-4 bg-white rounded p-4" >
                <h3 class="text-uppercase text-center mb-5">Login</h3>
                <form action="/admin/" method="POST">
                    <!-- Email input -->
                    <div class="form-outline mb-4 ">
                        <input type="email" id="form2Example1" class="form-control border border-dark" name="Email" placeholder="Email address"/>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-5">
                        <input type="password" id="form2Example2" class="form-control border border-dark" name="Password" placeholder="Password" />
                    </div>
                    {{#if logErr}}
                      <p class="error text-danger fw-bold">{{logErr}}</p>
                    {{/if}}
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-3 w-100 p-2">Login</button>

                </form>
            </div>
        </div>
    </div>
</section>
