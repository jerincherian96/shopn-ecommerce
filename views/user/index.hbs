<section class="user-section">
  <div class="container pt-3 ms-auto me-auto user-section ">
    <h2 class="ms-4">Featured Products</h2>
    <div class="row">
      {{#each products}}
      <div class="col-md-3 d-flex justify-content-center">
		
        <div class="card mt-4 cardImg" style="width: 15rem; height: 20rem; "  >   
			 <a href="/productdetails/{{this._id}}" class="productcard">
          <img
            src="/product-images/{{this.image1}}"
              class="card-img-top"
              alt="..."
              style="height: 12rem; "
          />
          <div class="card-body">
			
            <h5 class="card-title">{{this.brand}}</h5>
            <span class="card-text">size: {{this.size}}</span>
            <p><s class="productprice">{{this.mrp}}</s> <span class="ms-1 h6 card-text productprice">{{this.price}}</span></p>
			
          </div>
		  </a>
        </div>
		
      </div>

      {{/each}}
    </div>
  </div>
</section>

